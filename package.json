{
  "name": "cursor-helper",
  "displayName": "Cursor Helper",
  "description": "Get notified when Cursor tasks complete with customizable notifications and sounds. Includes context window monitoring.",
  "version": "0.3.0",
  "publisher": "Claritystorm",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Cursor Helper",
      "properties": {
        "cursorHelper.flagFile": {
          "type": "string",
          "default": "~/.cursor-notify.flag",
          "description": "Path to the flag file to watch for task completion"
        },
        "cursorHelper.message": {
          "type": "string",
          "default": "Cursor task complete",
          "description": "Notification message to display"
        },
        "cursorHelper.playSound": {
          "type": "boolean",
          "default": true,
          "description": "Play a sound when a task completes"
        },
        "cursorHelper.customSoundPath": {
          "type": "string",
          "default": "",
          "description": "Path to custom sound file (leave empty for system default)"
        },
        "cursorHelper.debounceMs": {
          "type": "number",
          "default": 500,
          "description": "Debounce time in milliseconds for file change events"
        },
        "cursorHelper.enableLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed logging to output channel"
        },
        "cursorHelper.contextMonitoring.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable context window capacity monitoring"
        },
        "cursorHelper.contextMonitoring.flagFile": {
          "type": "string",
          "default": "~/.cursor-context-alert.flag",
          "description": "Path to the context alert flag file"
        },
        "cursorHelper.contextMonitoring.message": {
          "type": "string",
          "default": "⚠️ Context window at capacity",
          "description": "Message to display when context window is at capacity"
        },
        "cursorHelper.contextMonitoring.threshold": {
          "type": "number",
          "default": 90,
          "description": "Alert when context usage exceeds this percentage (0-100)"
        }
      }
    },
    "commands": [
      {
        "command": "cursorHelper.quickSetup",
        "title": "Cursor Helper: Quick Setup (Copy Rule)"
      },
      {
        "command": "cursorHelper.setupContextMonitoring",
        "title": "Cursor Helper: Setup Context Window Monitoring"
      },
      {
        "command": "cursorHelper.testNotify",
        "title": "Cursor Helper: Test Notification"
      },
      {
        "command": "cursorHelper.openSettings",
        "title": "Cursor Helper: Open Settings"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alieneclectic/cursor-helper"
  },
  "keywords": [
    "cursor",
    "notification",
    "task",
    "completion",
    "alert"
  ],
  "license": "MIT"
}
